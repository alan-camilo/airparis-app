<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate android:fromDegrees="-45">

            <shape android:shape="oval">

                <gradient
                    android:centerX="-1"
                    android:endColor="@color/very_bad"
                    android:startColor="@color/very_bad_dark"
                    android:type="sweep" />

                <size
                    android:width="20dp"
                    android:height="20dp" />

            </shape>
        </rotate>
    </item>
</layer-list>